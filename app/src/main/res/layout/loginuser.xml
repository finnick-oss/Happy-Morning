<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/linearlayoutdesign"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/backButtonLogin"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/backbutton" />

        <View
            android:id="@+id/viewD3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/WhiteColor" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Enter your username here"
            android:textColor="@color/WhiteColor"
            android:textSize="20sp" />


        <View
            android:id="@+id/viewD2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/WhiteColor" />

        <EditText
            android:id="@+id/usernameLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonbackgraoud"
            android:hint="Username"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@color/WhiteColor"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="@color/WhiteColor" />


        <Button
            android:id="@+id/loginUserByUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/DetailsYellow"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text='" have a productive day!"'
            android:textColor="@color/WhiteColor"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>