<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="410dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/linearlayoutdesign"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/palanquin_dark_medium"
        android:gravity="center"
        android:text="Enter your username here"
        android:textColor="@color/DetailsBlack"
        android:textSize="30sp" />

        <EditText
            android:id="@+id/usernameLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/buttonbackgraoud"
            android:gravity="center"
            android:hint="USERNAME"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/DetailsYellow"
            android:textColorHint="@color/DetailsYellow" />

    <Button
        android:id="@+id/loginUserByUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/startbutton"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Login"
        android:textSize="18sp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:gravity="center"
            android:text='" have a productive day!"'
            android:textColor="#FFE87C"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/backButtonLogin"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/backbutton" />

</RelativeLayout>